{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-restricted-globals": [
            "off",
            {
                "name": "isNaN",
                "message": "Use local parameter instead."
            }
        ],
        "no-underscore-dangle": "off",
        "linebreak-style": 0,
        "eslint linebreak-style": [0, "error", "windows"]
    },
    "settings": {
        "import/resolver": {
          "node": {
            "moduleDirectory": [
              "./node_modules",
              "./src"
            ]
          }
        }
      }
}